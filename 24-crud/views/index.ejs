<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home page</title>
    <!-- fontawesome -->
    <link rel="stylesheet" href="/static/css/all.min.css" />
    <!-- bootstrap css -->
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <!-- css -->
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>
  <body>
    <div class="container-fluid pt-4">
      <div class="row d-flex justify-content-center gap-5">
        <section class="col-5 border p-3">
          <div class="alert alert-primary text-center mb-4" role="alert">
            <h3>Add New Student</h3>
          </div>
          <form method="post" class="form">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="e.g. Rahul"
              />
            </div>
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input
                type="text"
                class="form-control"
                id="age"
                name="age"
                placeholder="e.g. 19"
              />
            </div>
            <div class="mb-3">
              <label for="fees" class="form-label">Fees</label>
              <input
                type="text"
                class="form-control"
                id="fees"
                name="fees"
                placeholder="e.g. 6200.38"
              />
            </div>
            <div class="d-flex">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </section>
        <section class="col-5 border p-3">
          <div class="alert alert-secondary text-center mb-4" role="alert">
            <h3>Add New Student</h3>
          </div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Age</th>
                <th>Fees</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach( (doc, index) => { %>
                <tr>
                  <td> <%= index + 1 %> </td>
                  <td> <%= doc.name %> </td>
                  <td> <%= doc.age %> </td>
                  <td> <%= doc.fees %> </td>
                  <td> 
                    <form action="./student/edit/<%= doc._id %>" method="get" class="d-inline p-0">
                      <button type="submit" class="border-0 bg-none bg-transparent">
                        <i class="fas fa-edit edit-btn"></i> 
                      </button>
                    </form>
                    <form action="./student/delete/<%= doc._id %>" method="post" class="d-inline p-0">
                      <button type="submit" class="border-0 bg-transparent">
                        <i class="fas fa-trash delete-btn"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </section>
      </div>
    </div>

    <!-- fontawesome -->
    <script src="/static/js/all.min.js"></script>
    <!-- bootstrap js -->
    <script src="/static/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
